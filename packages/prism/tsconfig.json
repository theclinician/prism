{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    // "declarationDir": "./dist",
    "emitDeclarationOnly": false,
    // "esModuleInterop": true,
    // "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    // "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "newLine": "LF",
    "outDir": "./dist",
    "paths": {
      "$/*": ["./src/*"],
    },
    // "resolveJsonModule": true,
    // "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "esnext",
    "types": ["solid-js"],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.json",
    "src/**/*.d.ts",
    "src/**/*.module.scss"
  ],
}

