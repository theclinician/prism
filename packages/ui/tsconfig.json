{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "lib": ["esnext", "DOM"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext",
    // "baseUrl": ".",
    "paths": {
      "$/*": ["./src/*"],
    },
    "allowSyntheticDefaultImports": true,
    // "allowImportingTsExtensions": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.json",
    "src/**/*.d.ts",
    "src/**/*.module.scss"
  ],
}
